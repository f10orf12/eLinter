{
  "manifest_version": 2,
  "name": "Equivant HTML Linter",
  "description": "Run-time HTML linter for equivant applications",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://localhost:8080/*",
    "http://daviesw10:8080/*"
  ],
  "content_scripts": [{
      "matches": ["http://localhost:8080/*", "http://daviesw10:8080/*"],
      "js": ["contentscript.js"]
  }],
  "web_accessible_resources": [""]
}